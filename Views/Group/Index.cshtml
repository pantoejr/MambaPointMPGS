@model IEnumerable<Group>
@{
    ViewData["Title"] = "Groups";
    int count = 1;
}
<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm rounded">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">@ViewData["Title"]</h4>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle mr-3"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped dataTable table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Actions(s)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@group.Name</td>
                                    <td>
                                        <a asp-route-Id="@group.Id" asp-action="Edit" asp-controller="Group" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-route-Id="@group.Id" asp-controller="Group" asp-action="Details" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <form asp-route-Id="@group.Id" asp-action="Delete" asp-controller="Group" method="post" style="display:inline-block;">
                                            <button class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>