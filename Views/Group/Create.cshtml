@model Group
@{
    ViewData["Title"] = "Create Group";
}
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 rounded shadow-sm">
            <div class="card-header bg-white">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Group" method="post">
                    <div class="form-group mb-3">
                        <label class="form-label" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control p-3 border-0 bg-light" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" asp-for="Description"></label>
                        <textarea asp-for="Description" cols="5" rows="1" class="form-control p-3 border-0 bg-light"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary text-white">Submit</button>
                        <a asp-action="Index" class="btn btn-light">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>