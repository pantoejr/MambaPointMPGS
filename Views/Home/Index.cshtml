@{
    ViewData["Title"] = "Home Page";
}

<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-card bg-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Total Users</h6>
                    <h3 class="mb-0">1,254</h3>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 12.5% from last month</small>
                </div>
                <i class="bi bi-people card-icon text-primary"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-card bg-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Total Revenue</h6>
                    <h3 class="mb-0">$12,345</h3>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 8.3% from last month</small>
                </div>
                <i class="bi bi-currency-dollar card-icon text-success"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-card bg-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Pending Orders</h6>
                    <h3 class="mb-0">56</h3>
                    <small class="text-danger"><i class="bi bi-arrow-down"></i> 3.2% from last month</small>
                </div>
                <i class="bi bi-cart card-icon text-warning"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-card bg-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-2">Support Tickets</h6>
                    <h3 class="mb-0">24</h3>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 5.7% from last month</small>
                </div>
                <i class="bi bi-headset card-icon text-info"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Tables -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Sales Overview</h5>
            </div>
            <div class="card-body">
                <div id="salesChart" style="height: 300px;">
                    <!-- Chart placeholder - you would integrate with Chart.js or similar here -->
                    <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                        <div class="text-center">
                            <i class="bi bi-bar-chart text-muted" style="font-size: 3rem;"></i>
                            <p class="mt-2">Sales chart will appear here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Activity</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0 px-0 py-2">
                        <div class="d-flex">
                            <div class="me-3">
                                            <span class="bg-primary bg-opacity-10 text-primary p-2 rounded-circle">
                                                <i class="bi bi-cart"></i>
                                            </span>
                            </div>
                            <div>
                                <h6 class="mb-1">New order #1234</h6>
                                <small class="text-muted">2 minutes ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item border-0 px-0 py-2">
                        <div class="d-flex">
                            <div class="me-3">
                                            <span class="bg-success bg-opacity-10 text-success p-2 rounded-circle">
                                                <i class="bi bi-currency-dollar"></i>
                                            </span>
                            </div>
                            <div>
                                <h6 class="mb-1">Payment received</h6>
                                <small class="text-muted">1 hour ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item border-0 px-0 py-2">
                        <div class="d-flex">
                            <div class="me-3">
                                            <span class="bg-info bg-opacity-10 text-info p-2 rounded-circle">
                                                <i class="bi bi-person-plus"></i>
                                            </span>
                            </div>
                            <div>
                                <h6 class="mb-1">New user registered</h6>
                                <small class="text-muted">3 hours ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item border-0 px-0 py-2">
                        <div class="d-flex">
                            <div class="me-3">
                                            <span class="bg-warning bg-opacity-10 text-warning p-2 rounded-circle">
                                                <i class="bi bi-truck"></i>
                                            </span>
                            </div>
                            <div>
                                <h6 class="mb-1">Order #1234 shipped</h6>
                                <small class="text-muted">5 hours ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item border-0 px-0 py-2">
                        <div class="d-flex">
                            <div class="me-3">
                                            <span class="bg-danger bg-opacity-10 text-danger p-2 rounded-circle">
                                                <i class="bi bi-exclamation-triangle"></i>
                                            </span>
                            </div>
                            <div>
                                <h6 class="mb-1">High priority ticket</h6>
                                <small class="text-muted">Yesterday</small>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

