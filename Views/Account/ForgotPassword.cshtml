@model ForgotPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password | MambaPointMPGS</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <br><br><br>
            <div class="card border-0 mt-5 shadow-sm rounded-sm">
                <div class="card-header p-3 bg-white text-center">
                    <h4><i class="bi bi-box-arrow-in-right me-2"></i>Reset Password</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" id="email" placeholder="name@example.com" required>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-login btn-primary mb-3">
                                <i class="bi bi-box-arrow-in-right me-2 w-full"></i>Send Link
                            </button>
                            <a asp-action="Login" class="btn btn-light mb-3 w-full">
                                Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>